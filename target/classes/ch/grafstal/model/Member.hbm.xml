<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="ch.grafstal.model.Member" table="tbl_mitglieder">
      <meta attribute="class-description">
         This class contains the member detail. 
      </meta>
      <id name="id" type="int" column="Mitglied_ID">
         <generator class="native"/>
      </id>
      <property name="name" column="Vorname" type="string"/>
      <property name="surname" column="Nachname" type="string"/>
   </class>
</hibernate-mapping>